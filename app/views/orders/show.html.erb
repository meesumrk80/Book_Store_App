<h1 class="text-2xl font-bold mb-6 text-gray-800">Order Summary</h1>

<p><strong>Order ID:</strong> <%= @order.id %></p>
<p><strong>Placed on:</strong> <%= @order.created_at.strftime("%d %b %Y, %I:%M %p") %></p>

<hr class="my-4">

<h2 class="text-xl font-semibold mb-2">Items</h2>
<ul class="space-y-2">
  <% @order.cart.cart_items.each do |item| %>
    <li class="flex items-center justify-between bg-white shadow rounded-lg p-3">
      <div>
        <strong><%= item.book.title %></strong>  
        by <%= item.book.author %><br>
        Quantity: <%= item.quantity %>
      </div>
      <span class="font-medium text-gray-700">Rs. <%= item.book.price * item.quantity %></span>
    </li>
  <% end %>
</ul>

<hr class="my-4">

<p class="text-lg font-bold">
  Total: Rs. 
  <%= @order.cart.cart_items.sum { |item| item.book.price * item.quantity } %>
</p>

<%= link_to "Back to Books", books_path, class: "mt-4 inline-block bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
