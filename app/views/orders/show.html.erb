<h1 class="text-2xl font-bold mb-6 text-gray-900">Order Summary</h1>

<div class="bg-white rounded-lg border p-4 space-y-2">
  <p><span class="font-medium text-gray-700">Order ID:</span> <%= @order.id %></p>
  <p><span class="font-medium text-gray-700">Placed on:</span> <%= @order.created_at.strftime("%d %b %Y, %I:%M %p") %></p>
</div>

<h2 class="text-xl font-semibold mt-6 mb-3 text-gray-900">Items</h2>
<ul class="space-y-2">
  <% @order.cart.cart_items.each do |item| %>
    <li class="flex items-center justify-between bg-white shadow rounded-lg p-3">
      <div>
        <strong class="text-gray-900"><%= item.book.title %></strong>
        <span class="text-gray-600">by <%= item.book.author %></span><br>
        <span class="text-sm text-gray-600">Quantity: <%= item.quantity %></span>
      </div>
      <span class="font-medium text-gray-900">Rs. <%= item.book.price * item.quantity %></span>
    </li>
  <% end %>
</ul>

<div class="mt-6 flex items-center justify-between bg-white border rounded-lg p-4">
  <span class="text-lg font-bold text-gray-900">Total</span>
  <span class="text-lg font-bold text-gray-900">Rs. <%= @order.cart.cart_items.sum { |item| item.book.price * item.quantity } %></span>
  </div>

<%= link_to "Back to Books", books_path, class: "mt-6 inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
