<div class="mt-4 flex-1">
  <div class="flex items-start justify-between">
    <div>
      <h2 class="text-lg font-semibold text-gray-900"><%= book.title %></h2>
      <p class="text-sm text-gray-600">by <%= book.author %></p>
    </div>
    <div class="text-right">
      <span class="inline-flex items-center rounded-md bg-green-100 px-2 py-1 text-xs font-medium text-green-800">In stock: <%= book.stock %></span>
    </div>
  </div>

  <% if book.categories.any? %>
    <div class="mt-2 flex flex-wrap gap-2">
      <% book.categories.each do |cat| %>
        <%= link_to cat.name, category_path(cat), class: "px-2 py-0.5 bg-blue-50 text-blue-700 rounded-full text-xs font-medium hover:bg-blue-100" %>
      <% end %>
    </div>
  <% end %>

  <div id="<%= dom_id book %>" class="mt-3 space-y-1 text-sm text-gray-700">
    <p><span class="font-medium text-gray-800">Price:</span> Rs. <%= book.price %></p>
    <p class="line-clamp-3"><span class="font-medium text-gray-800">Description:</span> <%= book.description %></p>
  </div>
</div>