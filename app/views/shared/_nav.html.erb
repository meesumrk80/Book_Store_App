          <% if params[:q].present? %>
            <div class="absolute bg-white shadow-lg rounded-lg mt-2 w-64 z-10 p-4 max-h-64 overflow-y-auto">
              <% if @books.any? %>
                <h3 class="text-gray-700 font-semibold mb-2">Search Results</h3>
                <% @books.each do |book| %>
                  <div>
                    <%= link_to book.title, book_path(book), class: "text-blue-600 hover:underline" %>
