<section class="bg-gray-50">
  <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
    <a href="#" class="flex items-center mb-6 text-2xl font-semibold text-gray-900">
      <img class="w-8 h-8 mr-2" src="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/logo.svg" alt="logo">
      BookApp
    </a>
    <div class="w-full bg-white rounded-lg shadow md:mt-0 sm:max-w-md xl:p-0 border border-gray-200">
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl">
          Log in
        </h1>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4 md:space-y-6" }) do |f| %>
          <div>
            <%= f.label :email, "Your email", class: "block mb-2 text-sm font-medium text-gray-900" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg
                      focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" %>
          </div>

          <div>
            <%= f.label :password, "Password", class: "block mb-2 text-sm font-medium text-gray-900" %>
            <%= f.password_field :password, autocomplete: "current-password",
              class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg
                      focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="flex items-center">
              <%= f.check_box :remember_me,
                class: "w-4 h-4 border border-gray-300 rounded bg-gray-50
                        focus:ring-3 focus:ring-blue-300" %>
              <%= f.label :remember_me, "Remember me",
                class: "ml-2 text-sm font-medium text-gray-900" %>
            </div>
          <% end %>

          <%= f.submit "Log in", class: "w-full text-white bg-blue-600 hover:bg-blue-700
                                      focus:ring-4 focus:outline-none focus:ring-blue-300
                                      font-medium rounded-lg text-sm px-5 py-2.5 text-center" %>
        <% end %>

        <p class="text-sm font-light text-gray-500">
          Donâ€™t have an account?
          <%= link_to "Sign up here", new_registration_path(resource_name),
              class: "font-medium text-blue-600 hover:underline" %>
        </p>
      </div>
    </div>
  </div>
</section>
